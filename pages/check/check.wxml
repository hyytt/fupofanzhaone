<view class="body">

<view class="head">head</view>

  <view class="list-wrap">
    <scroll-view scroll-y="true" class="list">
      <view class="list-scroll-view">
      <view class="view-for-item" wx:for="{{persons}}"> 
        <view class="view-item">
       <view class="text-name">
          <text class="text-item">姓名: {{item.name}}</text>
          <image class="text-photo" src="{{item.photo}}"></image>
        </view>
        <view>
          <text class="text-2line">出生年月: {{item.birth}}</text>
          <text class="text-2line">年龄: {{item.age}}</text>
          <text class="text-2line">籍贯: {{item.nativePlace}}</text>
        </view>
          <text class="text-3line">工作情况: {{item.workProperty}}</text>
      
      </view>
      
      </view>
      </view>
    </scroll-view>
  </view>
<view class="down">
  down
</view>

</view>